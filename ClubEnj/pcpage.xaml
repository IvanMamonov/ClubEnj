<Page x:Class="ClubEnj.pcpage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClubEnj"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="#cc1d00"
      Title="pcpage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Кол-во часов" Grid.Column="0" Grid.Row="0" FontSize="25" FontFamily="Arial" Foreground="White" TextAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="tb_amount" Grid.Column="1" Grid.Row="0" Margin="25,30,25,30" TextChanged="tb_amount_TextChanged"/>
        <Button x:Name="btn_count" Content="посчитать" Grid.Column="2" Grid.ColumnSpan="1" Grid.Row="0" Click="btn_count_Click" Margin="25,25,25,29"/>
        <Button x:Name="btn_choose" Content="выбрать" Grid.Column="2" Grid.ColumnSpan="1" Grid.Row="1" Click="btn_choose_Click" Margin="25,25,25,29"/>
        <TextBlock Text="Ночной тариф" Grid.Column="0" Grid.Row="2" FontSize="25" FontFamily="Arial" Foreground="White" VerticalAlignment="Center" TextAlignment="Center"/>
        <Button x:Name="btn_nigch" Content="выбрать" Grid.Column="2" Grid.ColumnSpan="1" Grid.Row="2" Click="btn_nigch_Click" Margin="25,25,25,29"/>
        <Label x:Name="prise" Grid.Row="1" Grid.Column="1" FontSize="25" FontFamily="Arial" Foreground="White" VerticalAlignment="Center" Height="40" HorizontalAlignment="Center" Width="89"></Label>
        <TextBlock Text="Цена:" Grid.Column="1" Grid.Row="1" FontSize="25" FontFamily="Arial" Foreground="White" VerticalAlignment="Center" TextAlignment="Left" Margin="0,0,130,0"/>
        <TextBlock Text="Цена:" Grid.Column="1" Grid.Row="2" FontSize="25" FontFamily="Arial" Foreground="White" VerticalAlignment="Center" TextAlignment="Left"/>
        <TextBlock x:Name="prisenght" Text="1520р" Grid.Column="1" Grid.Row="2" FontSize="25" FontFamily="Arial" Foreground="White" VerticalAlignment="Center" TextAlignment="Center"/>
        <Button x:Name="btn_back" Content="выfdpogjifdь" Grid.Column="3" Grid.ColumnSpan="1" Grid.Row="2" Click="btn_back_Click" Margin="25,25,25,29"/>
    </Grid>
</Page>
